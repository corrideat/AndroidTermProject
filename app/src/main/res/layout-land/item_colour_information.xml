<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toast_colour_information"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/colour_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="fill_horizontal"
        android:text="@string/DYNAMIC"
        android:textSize="40sp" />

    <FrameLayout
        android:id="@+id/colour_preview"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/colour_name"
        android:layout_centerHorizontal="true"
        android:layout_margin="0dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="10dp"
        android:padding="0sp"
        android:paddingLeft="0sp"
        android:paddingRight="0sp" />

    <TextView
        android:id="@+id/hsv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/colour_preview"
        android:text="@string/hsv" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/colour_preview"
        android:layout_gravity="fill_horizontal|top"
        android:layout_toEndOf="@+id/hsv_text"
        android:layout_toRightOf="@+id/hsv_text"
        android:paddingBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:paddingTop="0dp">

        <TextView
            android:id="@+id/colour_hue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/DYNAMIC" />

        <TextView
            android:id="@+id/degree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/colour_hue"
            android:layout_toRightOf="@+id/colour_hue"
            android:text="@string/degree" />

        <TextView
            android:id="@+id/separator1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/degree"
            android:layout_toRightOf="@+id/degree"
            android:text="@string/separator" />

        <TextView
            android:id="@+id/colour_saturation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/separator1"
            android:layout_toRightOf="@+id/separator1"
            android:text="@string/DYNAMIC" />

        <TextView
            android:id="@+id/separator2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/colour_saturation"
            android:layout_toRightOf="@+id/colour_saturation"
            android:text="@string/separator" />

        <TextView
            android:id="@+id/colour_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/separator2"
            android:layout_toRightOf="@+id/separator2"
            android:text="@string/DYNAMIC" />
    </RelativeLayout>

</RelativeLayout>